#!/bin/bash

# GitHub Repository Setup Script for Swastik Imaging Backend
# Run this script to easily connect your local repository to GitHub

echo "ğŸš€ Swastik Imaging Backend - GitHub Setup"
echo "=========================================="

# Check if we're in the right directory
if [ ! -f "package.json" ] || [ ! -d ".git" ]; then
    echo "âŒ Error: Please run this script from the backend directory"
    echo "   Current directory should contain package.json and .git folder"
    exit 1
fi

# Check if git is configured
if ! git config user.name >/dev/null 2>&1; then
    echo "âš™ï¸  Setting up Git configuration..."
    read -p "Enter your name: " user_name
    read -p "Enter your email: " user_email
    git config user.name "$user_name"
    git config user.email "$user_email"
    echo "âœ… Git configuration set"
fi

# Get GitHub username and repository name
echo ""
echo "ğŸ“ Repository Information"
echo "------------------------"
read -p "Enter your GitHub username: " github_username
read -p "Enter repository name (default: swastik-imaging-backend): " repo_name

# Use default repository name if not provided
if [ -z "$repo_name" ]; then
    repo_name="swastik-imaging-backend"
fi

# Construct repository URL
repo_url="https://github.com/$github_username/$repo_name.git"

echo ""
echo "ğŸ”— Repository URL: $repo_url"
echo ""

# Check if remote already exists
if git remote get-url origin >/dev/null 2>&1; then
    echo "âš ï¸  Remote 'origin' already exists. Removing it..."
    git remote rm origin
fi

# Add remote origin
echo "ğŸ”— Adding remote origin..."
git remote add origin "$repo_url"

# Verify remote was added
if git remote get-url origin >/dev/null 2>&1; then
    echo "âœ… Remote origin added successfully"
else
    echo "âŒ Failed to add remote origin"
    exit 1
fi

echo ""
echo "ğŸ“‹ Next Steps:"
echo "1. Go to GitHub.com and create a new repository named: $repo_name"
echo "2. Make sure the repository is EMPTY (no README, .gitignore, or license)"
echo "3. Come back and press Enter to push your code..."
read -p "Press Enter when you've created the repository on GitHub..."

# Push to GitHub
echo ""
echo "ğŸš€ Pushing to GitHub..."
if git push -u origin main; then
    echo ""
    echo "ğŸ‰ SUCCESS! Your backend repository is now on GitHub!"
    echo "ğŸ“ Repository URL: https://github.com/$github_username/$repo_name"
    echo ""
    echo "âœ… What's been uploaded:"
    echo "   â€¢ Complete backend API (25 files)"
    echo "   â€¢ Documentation (README, Contributing guide)"
    echo "   â€¢ Docker configuration"
    echo "   â€¢ Database schema with Prisma"
    echo "   â€¢ Production-ready code"
    echo ""
    echo "ğŸ”— View your repository: https://github.com/$github_username/$repo_name"
    echo ""
    echo "ğŸ“š Next steps:"
    echo "   â€¢ Set up repository description and topics"
    echo "   â€¢ Configure branch protection rules"
    echo "   â€¢ Add collaborators if needed"
    echo "   â€¢ Set up deployment (Heroku, Vercel, etc.)"
else
    echo ""
    echo "âŒ Push failed. Common solutions:"
    echo "   â€¢ Make sure you created the repository on GitHub"
    echo "   â€¢ Check that the repository name matches: $repo_name"
    echo "   â€¢ Verify your GitHub authentication"
    echo "   â€¢ Try: git push -u origin main --force (if repository is empty)"
fi

echo ""
echo "ğŸ”§ Manual commands if needed:"
echo "   git remote add origin $repo_url"
echo "   git push -u origin main"